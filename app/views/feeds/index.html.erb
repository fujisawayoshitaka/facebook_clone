<p id="notice"><%= notice %></p>


<table>
  <thead>
    <tr>
      <th><span class="label label-primary">名前</span></th>
      <th><span class="label label-primary">内容</span></th>
      <th><span class="label label-primary">画像</span></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.user.name %></td>
        <td><%= feed.content %></td>
        <% if feed.image.blank?%>
          <td><%= "no image"  %></td>
        <% else%>
          <td><%= image_tag(feed.image.url)  %></td>
        <% end %>
        <td><%= link_to '詳細', feed %></td>
        <td><%= link_to '編集', edit_feed_path(feed) %></td>
        <td><%= link_to '削除', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

